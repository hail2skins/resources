<p id="notice"><%= notice %></p>

<h1>Systems</h1>

<%= paginate @systems %>
<table class="table table-striped">
  <thead class="thead-inverse">
    <tr>
      <th>Name</th>
      <th>Resource Group</th>
      <th>Location</th>
      <th>Availability Set</th>
      <th>OS</th>
      <th>VM Size</th>
      <th>OS Version</th>
      <th>Storage</th>
      <th>Subnet</th>
      <th>IP</th>
      <th>NSG</th>
      <th>NSG Resource Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @systems.each do |system| %>
      <tr>
        <td><%= system.name %></td>
        <td><%= system.resource_group %></td>
        <td><%= system.location %></td>
        <td><%= system.availability_set %></td>
        <td><%= system.operating_system %></td>
        <td><%= system.vm_size %></td>
        <td><%= system.operating_system_version %></td>
        <td><%= system.storage %></td>
        <td><%= system.subnet %></td>
        <td><%= system.ip %></td>
        <td><%= system.nsg %></td>
        <td><%= system.nsg_resource_group %></td>
        <td><%= link_to 'Show', system %></td>
        <td><%= link_to 'Edit', edit_system_path(system) %></td>
        <td><%= link_to 'Destroy', system, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

